<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pasta.mensadd.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/toolbarImage"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/content_app_logo"
                android:src="@drawable/banner"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/heading_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#EEE"
                android:textSize="20sp"
                android:visibility="gone"/>

        </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/navigation"
        android:layout_below="@id/toolbar"
        android:animateLayoutChanges="true">
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/cardCheckContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#EEEEEE"
                android:visibility="visible"
                android:elevation="10dp"
                android:layout_alignParentBottom="true"
                tools:targetApi="lollipop">
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balanceButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/cardCheckContainer"
            app:layout_anchorGravity="top|right|end">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/saveBalanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_save_black_24dp"
                android:tint="#FFFFFF"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                app:fabSize="normal"
                app:useCompatPadding="true"/>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/hideBalanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_clear_black_18dp"
                android:tint="#FFFFFF"
                android:visibility="gone"
                android:layout_alignRight="@id/saveBalanceButton"
                android:layout_centerVertical="true"
                android:layout_marginRight="65dp"
                app:fabSize="mini"
                app:useCompatPadding="true"/>
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>


