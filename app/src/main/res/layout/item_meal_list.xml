<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:longClickable="false"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mealListItemHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/mealName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56dp"
                    android:layout_marginEnd="56dp"
                    android:minLines="2"
                    android:includeFontPadding="false"
                    android:textSize="19sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mealDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealListItemHeader"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/mealImageProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:alpha="0.4" />

                <ImageView
                    android:id="@+id/mealImage"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/no_meal_image"
                    android:contentDescription="@string/no_meal_image"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/mealContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mealListItemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealDetails"
                android:padding="10dp">

                <TextView
                    android:id="@+id/mealPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/mealIcons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/vegetarian"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:src="@drawable/vegetarian" />

                    <ImageView
                        android:id="@+id/pork"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:src="@drawable/pork" />

                    <ImageView
                        android:id="@+id/beef"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:src="@drawable/beef" />

                    <ImageView
                        android:id="@+id/alcohol"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:src="@drawable/alcohol" />

                    <ImageView
                        android:id="@+id/garlic"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:src="@drawable/garlic" />

                </LinearLayout>

                <TextView
                    android:id="@+id/vegan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/mealPrice"
                    android:layout_toLeftOf="@id/mealIcons"
                    android:layout_toStartOf="@id/mealIcons"
                    android:alpha="0.4"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/vegan_meal"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:useCompatPadding="true"
            android:clickable="true"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="#FFFFFF"
            app:layout_anchor="@id/mealListItemHeader"
            app:layout_anchorGravity="bottom|right|end"
            android:visibility="gone"
            app:fabSize="normal" />
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>