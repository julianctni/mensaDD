<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:id="@+id/coachmark"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="#cc01aaad"
    android:minWidth="250dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    tools:context="com.pasta.mensadd.activity.MealsFragment" >

    <RelativeLayout
        android:id="@+id/mensa_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/meal_detail_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="mealPicture"
            android:layout_marginBottom="2dp"
            android:src="@drawable/nopicture" />

        <TextView
            android:id="@+id/meal_detail_allergene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meal_detail_picture"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meal_detail_allergene"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_share_white_36dp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>
</ScrollView><!-- From: file:/home/julian/dev/mensadd/app/src/main/res/layout/overlay_meal_detail.xml -->