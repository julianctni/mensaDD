<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.pasta.mensadd.activity.MainActivity" >

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:gravity="center_vertical"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/neueMensa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_cyan"
                android:contentDescription="@string/name_neuemensa"
                android:onClick="showNeueMensa"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_neuemensa" />

            <ImageButton
                android:id="@+id/alteMensa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_pink"
                android:contentDescription="@string/name_altemensa"
                android:onClick="showAlteMensa"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_altemensa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <ImageButton
                android:id="@+id/stimmgabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_pink"
                android:contentDescription="@string/name_stimmgabel"
                android:onClick="showStimmgabel"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_stimmgabel" />

            <ImageButton
                android:id="@+id/mensologie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_blue"
                android:contentDescription="@string/name_mensologie"
                android:onClick="showMensologie"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_mensologie" />

            <ImageButton
                android:id="@+id/siedepunkt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_orange"
                android:contentDescription="@string/name_siedepunkt"
                android:onClick="showSiedepunkt"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_siedepunkt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <ImageButton
                android:id="@+id/reichenbach"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_blue"
                android:contentDescription="@string/name_reichenbach"
                android:onClick="showReichenbach"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_reichenbach" />

            <ImageButton
                android:id="@+id/wuEins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_orange"
                android:contentDescription="@string/name_wueins"
                android:onClick="showWuEins"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_wueins" />

            <ImageButton
                android:id="@+id/uboot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_pink"
                android:contentDescription="@string/name_uboot"
                android:onClick="showUBoot"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_uboot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <ImageButton
                android:id="@+id/johannstadt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_pink"
                android:contentDescription="@string/name_johannstadt"
                android:onClick="showJohannstadt"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_johannstadt" />

            <ImageButton
                android:id="@+id/tellerrandt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_cyan"
                android:contentDescription="@string/name_tellerrandt"
                android:onClick="showTellerrandt"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_tellerrandt" />

            <ImageButton
                android:id="@+id/bruehl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_orange"
                android:contentDescription="@string/name_bruehl"
                android:onClick="showBruehl"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_bruehl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <ImageButton
                android:id="@+id/sport"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_orange"
                android:contentDescription="@string/name_sport"
                android:onClick="showSport"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_sport" />

            <ImageButton
                android:id="@+id/palucca"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_pink"
                android:contentDescription="@string/name_palucca"
                android:onClick="showPalucca"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_palucca" />

            <ImageButton
                android:id="@+id/kreuz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@color/tile_blue"
                android:contentDescription="@string/name_kreuz"
                android:onClick="showKreuz"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tile_kreuz" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/julian/dev/mensaDD/app/src/main/res/layout/activity_main.xml -->