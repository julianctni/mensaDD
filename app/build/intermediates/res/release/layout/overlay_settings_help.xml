<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coachmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc01aaad"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/coachmark_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:text="@string/settings_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/coachmark_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="email"
            android:clickable="true"
            android:linksClickable="true"
            android:text="@string/settings_coachmark"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="15sp" />
    </ScrollView>

</LinearLayout><!-- From: file:/home/julian/dev/mensaDD/app/src/main/res/layout/overlay_settings_help.xml -->